	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Docker: Attach to Backend",
			"remoteRoot": "/work",
			"localRoot": "${workspaceFolder}/app",
			"restart": true
		},
		{
			"name": "Launch Chrome",
			"request": "launch",
			"type": "chrome",
			"url": "http://localhost:8080",
			"runtimeExecutable": "/usr/bin/chromium",
			"webRoot": "${workspaceFolder}/app/frontend"
		}
	]
}